package ProjetoSemana6;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner leia = new Scanner(System.in);
        do {
            System.out.println("Ola seja bem vindo, escolha uma das opcoes abaixo :");
            System.out.println("1. Converter Celsius em Fahrenheit");
            System.out.println("2. Converter Fahrenhet em Celsiu");
            System.out.println("3. Sair");
            int opcao = leia.nextInt();   
            
        
        
        float celsius;
        float fahrenheit;
        System.out.print("Digite a temperatura em graus celsius : ");
        celsius = leia.nextFloat();
        System.out.print(celsius + " graus Celcius equivalem a: " + ((celsius * 1.8) + 32) + " graus F");
        /*Cuidado com a divisão 9/5, divisão entre inteiros retorna valor inteiro e o resultado 
     dá errado*/
        System.out.print("Digite a temperatura em graus Fahrenheit : ");
        fahrenheit = leia.nextFloat();
        System.out.print(fahrenheit + " graus Fahrenheit equivalem a: " + ((fahrenheit - 32) * (5.0 / 9.0)) + " graus C");

        float dolar;
        float reais;
        float cambio;
        System.out.print("Qual o valor da cotação? ");
        cambio = leia.nextFloat();
        System.out.println("");
        System.out.print("Quantos dólares? ");
        dolar = leia.nextFloat();
        System.out.println("");
        System.out.print(dolar + " dólares em reais são " + "R$" + (dolar*cambio));

        System.out.print("Qual o valor da cotação? ");
        cambio = leia.nextFloat();
        System.out.println("");
        System.out.print("Quantos reais? ");
        reais = leia.nextFloat();
        System.out.println("");
        System.out.print("R$" + reais + " equivalem a " + (reais/cambio));

    }

}
